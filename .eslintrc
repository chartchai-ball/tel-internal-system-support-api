{
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier", "flowtype"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "legacyDecorators": true
    }
  },
  "rules": {
    "prettier/prettier": ["error"],
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "flowtype/define-flow-type": 1
  }
}